@{
    ViewData["Title"] = "Client Selection";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="mb-4 text-center text-primary fw-bold">Select Your Client</h2>
    <form method="get" asp-controller="Home" asp-action="Chat" class="border p-4 rounded shadow-sm bg-white">
        <div class="mb-3">
            <label for="clientSelect" class="form-label fw-semibold">Choose a client</label>
            <select class="form-select" id="clientSelect" name="clientId" required>
                <option value="" disabled selected>Select a client</option>
                <option value="Client1">Client 1</option>
                <option value="Client2">Client 2</option>
                <option value="Client3">Client 3</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary w-100 fw-semibold">Join Chat</button>
    </form>
</div>
